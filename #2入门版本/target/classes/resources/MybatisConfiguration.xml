<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <typeAliases>
  	<!-- 给com.maven.bean.Customer指定别名Customer(减少类完全限定名的冗余) -->
  	<typeAlias alias="Customer" type="com.maven.bean.Customer"/>
  </typeAliases>
  
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://127.0.0.1:3306/json"/>
        <property name="username" value="root"/>
        <property name="password" value="572165"/>
      </dataSource>
    </environment>
  </environments>
  
  <mappers>
    <mapper resource="resources/sql/CustomerMapper.xml"/>
  </mappers>
</configuration>